{% extends 'base.html.twig' %}
{% block title %}Checkout{% endblock %}
{% block body %}
<div class="row">
    <div class="col-md-8"></div>
    <div class="col-md-4">
        <a href="/remove-cart">CLEAR CART</a>
    </div>
</div>
<br/>
<br/>
<div class="row">
    <div class="col-md-5">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
    </div>
</div>
<div class="row">
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Author</th>
            <th scope="col">Qty</th>
            <th scope="col">Unit Price</th>
            <th scope="col">Price</th>
        </tr>
        </thead>
        <tbody>
    {% for book in books %}
        <tr class="table-light">
            <td>{{ book['name'] }}</td>
            <td>{{ book['author'] }}</td>
            <td>{{ book['qty'] }}</td>
            <td>{{ book['unit_price'] }}</td>
            <td>{{ book['price'] }}</td>
        </tr>
    {% endfor %}
    <tr class="table-light">
        <td></td>
        <td></td>
        <td></td>
        <td><b>Total : </b></td>
        <td>{{ sub_total }}</td>
    </tr>
    <tr class="table-light">
        <td></td>
        <td></td>
        <td></td>
        <td><b>Discount : </b></td>
        <td>{{ discount }}</td>
    </tr>
    <tr class="table-light">
        <td></td>
        <td></td>
        <td></td>
        <td><b>Sub total : </b></td>
        <td>{{ total }}</td>
    </tr>
        </tbody>
    </table>
</div>
{% endblock %}